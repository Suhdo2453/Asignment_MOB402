<%- include('../inc/header') %>

    <div class="d-flex justify-content-center align-items-center bg-secondary" style="min-height: 100vh;">
        <div class="container my-5 card p-5">
            <div class="row">
                <div class="col-md-6">
                    <form class="row g-3" enctype="multipart/form-data" method="POST"
                        action="/accounts/edit/<%= objAcc._id %>">
                        <!-- form content -->
                        <div class="col-12">
                            <label for="inputName" class="form-label">Username</label>
                            <input type="text" class="form-control" id="inputName" name="username"
                                value="<%= objAcc.username %>">
                        </div>
                        <div class="col-12">
                            <label for="inputCategory" class="form-label">Category</label>
                            <select type="text" class="form-select" id="inputCategory" name="role">
                                <option value="1" <%=objAcc.role==1? ' selected' : '' %>>Admin</option>
                                <option value="0" <%=objAcc.role==0? ' selected' : '' %>>User</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPrice" class="form-label">Email</label>
                            <input type="email" class="form-control" id="inputPrice" name="email"
                                value="<%= objAcc.email %>">
                        </div>
                        <div class="col-12">
                            <div class="modal-footer">
                                <a href="/accounts" type="button" class="btn btn-secondary me-3"
                                    data-dismiss="modal">Close</a>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                        <input type="file" name="image" class="form-control" id="image" style="display: none;">
                    </form>
                </div>
                <div class="col-md-6 text-center">
                    <img id="previewImg" src="/<%= objAcc.image %>" alt="Preview image" style="max-width: 100%;">
                    <button type="button" class="btn btn-primary mt-3" onclick="$('#image').trigger('click')">Choose
                        Image</button>

                </div>
            </div>
        </div>

    </div>

    <script>
        const imageInput = document.getElementById('image');
        const previewImg = document.getElementById('previewImg');

        imageInput.addEventListener('change', () => {
            const file = imageInput.files[0];
            const reader = new FileReader();

            reader.onload = (e) => {
                previewImg.src = e.target.result;
            };

            reader.readAsDataURL(file);
        });
    </script>

    <%- include('../inc/footer') %>