<%- include('../inc/header') %>

    <div class="d-flex justify-content-center align-items-center bg-secondary" style="min-height: 100vh;">
        <div class="container my-5 card p-5">
            <div class="row">
                <div class="col-md-6">
                    <form class="row g-3" enctype="multipart/form-data" method="POST"
                        action="/products/edit/<%= objPD._id %>">
                        <!-- form content -->
                        <div class="col-12">
                            <label for="inputName" class="form-label">Name</label>
                            <input type="text" class="form-control" id="inputName" name="name"
                                value="<%= objPD.name %>">
                        </div>
                        <div class="col-12">
                            <label for="inputCategory" class="form-label">Category</label>
                            <select type="text" class="form-select" id="inputCategory" name="category">
                                <option selected>Choose...</option>
                                <% categories.forEach(category=>{
                                    let selected = '';
                                    if(String(category._id) == String(objPD.category._id))
                                    selected = ' selected';
                                    %>
                                    <option value="<%= category._id %>" <%=selected %> >
                                        <%= category.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="inputPrice" class="form-label">Price</label>
                            <input type="text" class="form-control" id="inputPrice" name="price"
                                value="<%= objPD.price %>">
                        </div>
                        <div class="col-12">
                            <label for="inputDescription" class="form-label">Description</label>
                            <textarea name="description" id="inputDescription" class="form-control" cols="60"
                                rows="3"><%= objPD.description %></textarea>
                        </div>
                        <div class="col-12">
                            <div class="modal-footer">
                                <a href="/products" type="button" class="btn btn-secondary me-3"
                                    data-dismiss="modal">Close</a>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                        <input type="file" name="imageEdit" class="form-control" id="image" style="display: none;">
                    </form>
                </div>
                <div class="col-md-6 text-center">
                    <img id="previewImg" src="/<%= objPD.image %>" alt="Preview image" style="max-width: 100%;">
                    <button type="button" class="btn btn-primary mt-3" onclick="$('#image').trigger('click')">Choose
                        Image</button>

                </div>
            </div>
        </div>

    </div>

    <script>
        const imageInput = document.getElementById('image');
        const previewImg = document.getElementById('previewImg');

        imageInput.addEventListener('change', () => {
            const file = imageInput.files[0];
            const reader = new FileReader();

            reader.onload = (e) => {
                previewImg.src = e.target.result;
            };

            reader.readAsDataURL(file);
        });
    </script>

    <%- include('../inc/footer') %>